class HelloWorld
  puts "Hello World"
  
  #This is comment
  puts "---------------------------------------------------------"
  
  puts "# This is comment"
  
  #Assign the local variable
  x = 1
  print x
  
   
  #Do some basic arithmetic:
  puts "---------------------------------------------------------"
  
  print 1 + 2
  print 2 * 7
  print 5 / 2
  print 5 / 2.0
  print 1 + (2 * 3)
  
  #Work with strings:
  puts "---------------------------------------------------------"
  
  print 'single quoted'
  print "double quoted"
  print 'It\'s alive!'
  print '1 + 2 = 5'
  
  puts " Print GOVIND in lower case"
  print "GOVIND".downcase  
  print "govind".upcase  
 
  #Embed ruby in strings
  x ='Bob'
  print "Hi, #{x}"
  
  #Strings having quotes within quotes, use double quotes
  print "'Hi', #{x}"
  
  #truths
  puts "Truths"
  print 1==1
  puts " "
  print 1==2
  puts " "
  print 1!=2
  puts " "
  print !0  #Zero is not false, !0 gives false
  
  #Arrays
  z = ['a', 'b', 'c']
  print z[0]
  print z.first
  print z.last();
  print z + ['d']
  print z
  z = z + ['d']
  print z  
  
  
  
  
  
  
  
end